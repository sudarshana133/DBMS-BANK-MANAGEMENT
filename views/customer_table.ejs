<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customers</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="css/customer_table.css">
</head>
<body>
    <% if(customers.length==0){ %>
        <a href="/signup" class="addCustomer">Add customer</a>
    <% } %>
    <h1>Customer Table</h1>
    <table>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <!-- <th>Date of Birth</th> -->
            <th>Phone Number</th>
            <th>Email Id</th>
            <th>Account Id</th>
            <th>Address</th>
            <th>Aadhar Number</th>
            <!-- <th>IFSC</th>
            <th>Balance</th> -->
            <th>Delete</th>
            <th>Update</th>
        </tr>
            <% if(customers.length>0){ %>
                <% for(var i=0;i<customers.length;i++){ %>
                    <tr>
                        <td><%- customers[i].firstname %></td>
                        <td><%- customers[i].lastname %></td>
                        <td><%- customers[i].phonenum %></td>
                        <td><%- customers[i].email %></td>
                        <td><%- customers[i].accId %></td>
                        <td><%- customers[i].address%></td>
                        <td><%- customers[i].aadharNum%></td>
                        <td><a href="/deleteCustomer?id=<%-customers[i].id %>" class="delete">Delete<i class="fa-solid fa-trash"></i></a></td>
                        <td><a href="/updateCustomers?id=<%- customers[i].id %>" class="update">Update <i class="fa-solid fa-pen-to-square"></i></a></td>
                    </tr>
                <% } %>
            <% } else{ %>
                <h3>Customers data list is empty!</h3>
            <% } %>
    </table>
</body>
</html>